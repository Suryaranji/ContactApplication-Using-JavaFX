<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>
<BorderPane  fx:id="mainScene" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"   fx:controller="com.example.contacts.Controller">
    <top>
        <Label text="Contacts" textFill="indigo">
            <font>
                <Font name="Times New Roman bold" />

            </font>
        </Label>

    </top>
    <center>

      <TableView fx:id="table" prefHeight="500" prefWidth="600" GridPane.rowIndex="0" GridPane.columnIndex="0"  >
        <columns>
          <TableColumn fx:id="firstName" prefWidth="150" text="First Name" />
          <TableColumn fx:id="lastName" prefWidth="150" text="Last Name" />
            <TableColumn fx:id="phoneNumber" prefWidth="150" text="Phone Number" />
            <TableColumn  fx:id="notes" prefWidth="150" text="Notes" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>


    </center>
</BorderPane>
